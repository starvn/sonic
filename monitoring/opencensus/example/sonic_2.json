{
  "version": 1,
  "name": "Sonic API Gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "2500ms",
  "host": [ "http://127.0.0.1:8082/" ],
  "endpoints": [
    {
      "endpoint": "/fake/{something}",
      "concurrent_calls": 3,
      "backend": [
        {
          "url_pattern": "/fake/{something}"
        }
      ]
    },
    {
      "endpoint": "/combination/{id}",
      "backend": [
        {
          "url_pattern": "/combination/{id}",
          "group": "backend1"
        },
        {
          "url_pattern": "/combination/{id}",
          "group": "backend2"
        }
      ]
    }
  ],
  "extra_config": {
    "github.com/starvn/starvn/sonic/monitoring/opencensus": {
      "sample_rate": 100,
      "reporting_period": 1
    }
  }
}