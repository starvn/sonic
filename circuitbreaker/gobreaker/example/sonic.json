{
  "version": 1,
  "name": "Sonic API Gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "endpoints": [
    {
      "endpoint": "/showrss/{id}",
      "backend": [
        {
          "host": [
            "http://showrssi.nfo/",
            "http://showrss.info/"
          ],
          "url_pattern": "/user/schedule/{id}.rss",
          "encoding": "rss",
          "extra_config": {
            "github.com/starvn/sonic/circuitbreaker/gobreaker": {
              "interval": 60,
              "timeout": 10,
              "max_errors": 1
            }
          }
        },
        {
          "host": [
            "http://showrssi.nfo/",
            "http://showrss.info/"
          ],
          "url_pattern": "/user/{id}.rss",
          "encoding": "rss",
          "extra_config": {
            "github.com/starvn/sonic/circuitbreaker/gobreaker": {
              "interval": 60,
              "timeout": 10,
              "max_errors": 1
            }
          }
        }
      ]
    }
  ]
}