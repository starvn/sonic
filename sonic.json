{
  "version": 1,
  "name": "Sonic API Gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "extra_config": {
    "github.com/starvn/sonic/telemetry/gologging": {
      "level":  "DEBUG",
      "prefix": "[SONIC]",
      "syslog": false,
      "stdout": true
    },
    "github.com/starvn/sonic/telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "github.com/starvn/sonic/security/cors": {
      "allow_origins": [ "http://192.168.1.49:3000", "http://localhost:3000" ],
      "allow_methods": [ "POST", "GET" ],
      "allow_headers": [ "Origin", "Authorization", "Content-Type" ],
      "expose_headers": [ "Content-Length" ],
      "max_age": "12h"
    }
  },
  "endpoints": [
    {
      "endpoint": "/sonic",
      "method": "GET",
      "headers_to_pass": ["Authorization", "Content-Type"],
      "backend": [
        {
          "host": [
            "http://127.0.0.1:8000"
          ],
          "url_pattern": "/__debug/sonic",
          "extra_config": {
            "github.com/starvn/sonic/modifier/martian": {
              "fifo.Group": {
                "scope": ["request", "response"],
                "aggregateErrors": true,
                "modifiers": [
                  {
                    "header.Modifier": {
                      "scope": ["request", "response"],
                      "name" : "X-Martian",
                      "value" : "ouh yeah!"
                    }
                  },
                  {
                    "header.RegexFilter": {
                      "scope": ["request"],
                      "header" : "X-Neptunian",
                      "regex" : "no!",
                      "modifier": {
                        "header.Modifier": {
                          "scope": ["request"],
                          "name" : "X-Martian-New",
                          "value" : "some value"
                        }
                      }
                    }
                  }
                ]
              }
            },
            "github.com/starvn/sonic/qos/circuitbreaker/gobreaker": {
              "interval": 60,
              "timeout": 10,
              "maxErrors": 1
            }
          }
        }
      ]
    },
    {
      "endpoint": "/github/{user}",
      "method": "GET",
      "backend": [
        {
          "host": [
            "https://api.github.com"
          ],
          "url_pattern": "/",
          "whitelist": [
            "authorizations_url",
            "code_search_url"
          ],
          "disable_host_sanitize": true,
          "extra_config": {
            "github.com/starvn/sonic/modifier/martian": {
              "fifo.Group": {
                "scope": ["request", "response"],
                "aggregateErrors": true,
                "modifiers": [
                  {
                    "header.Modifier": {
                      "scope": ["request", "response"],
                      "name" : "X-Martian",
                      "value" : "ouh yeah!"
                    }
                  },
                  {
                    "body.Modifier": {
                      "scope": ["request"],
                      "contentType" : "application/json",
                      "body" : "eyJtc2ciOiJ5b3Ugcm9jayEifQ=="
                    }
                  },
                  {
                    "header.RegexFilter": {
                      "scope": ["request"],
                      "header" : "X-Neptunian",
                      "regex" : "no!",
                      "modifier": {
                        "header.Modifier": {
                          "scope": ["request"],
                          "name" : "X-Martian-New",
                          "value" : "some value"
                        }
                      }
                    }
                  }
                ]
              }
            },
            "github.com/starvn/sonic/qos/ratelimit/juju/proxy": {
              "maxRate": 2,
              "capacity": 2
            },
            "github.com/starvn/sonic/qos/circuitbreaker/gobreaker": {
              "interval": 60,
              "timeout": 10,
              "maxErrors": 1
            }
          }
        }
      ]
    },
    {
      "endpoint": "/private/{user}",
      "backend": [
        {
          "host": [ "http://api.github.com" ],
          "url_pattern": "/",
          "whitelist": [
            "authorizations_url",
            "code_search_url"
          ]
        }
      ],
      "extra_config": {
        "github.com/starvn/sonic/auth/jose/validator": {
          "alg": "RS256",
          "aud": "http://api.example.com",
          "roles_key": "http://api.example.com/custom/roles",
          "roles": [ "user", "admin" ],
          "jwk-url": "https://albert-test.auth0.com/.well-known/jwks.json"
        }
      }
    },
    {
      "endpoint": "/show/{id}",
      "backend": [
        {
          "host": [
            "http://showrss.info/"
          ],
          "url_pattern": "/user/schedule/{id}.rss",
          "encoding": "rss",
          "group": "schedule",
          "whitelist": ["items", "title"],
          "extra_config": {
            "github.com/starvn/sonic/qos/ratelimit/juju/proxy": {
              "maxRate": 1,
              "capacity": 1
            },
            "github.com/starvn/sonic/qos/circuitbreaker/gobreaker": {
              "interval": 60,
              "timeout": 10,
              "maxErrors": 1
            }
          }
        },
        {
          "host": [
            "http://showrss.info/"
          ],
          "url_pattern": "/user/{id}.rss",
          "encoding": "rss",
          "group": "available",
          "whitelist": ["items", "title"],
          "extra_config": {
            "github.com/starvn/sonic/qos/ratelimit/juju/proxy": {
              "maxRate": 2,
              "capacity": 2
            },
            "github.com/starvn/sonic/qos/circuitbreaker/gobreaker": {
              "interval": 60,
              "timeout": 10,
              "maxErrors": 1
            }
          }
        }
      ],
      "extra_config": {
        "github.com/starvn/sonic/qos/ratelimit/juju/router": {
          "maxRate": 50,
          "clientMaxRate": 5,
          "strategy": "ip"
        }
      }
    }
  ]
}
