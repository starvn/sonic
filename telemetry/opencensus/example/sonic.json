{
  "version": 1,
  "name": "Sonic API Gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "2500ms",
  "host": [ "http://127.0.0.1:8081/" ],
  "endpoints": [
    {
      "endpoint": "/fake/{something}",
      "concurrent_calls": 3,
      "backend": [
        {
          "url_pattern": "/fake/{something}"
        }
      ]
    },
    {
      "endpoint": "/combination/{id}",
      "backend": [
        {
          "url_pattern": "/combination/{id}",
          "group": "backend1"
        },
        {
          "url_pattern": "/combination/{id}",
          "group": "backend2"
        }
      ]
    }
  ],
  "extra_config": {
    "github.com/starvn/sonic/telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 1,
      "enabled_layers": {
        "backend": true,
        "router": true
      },
      "exporters": {
        "influxdb": {
          "address": "http://192.168.99.100:8086",
          "db": "sonic",
          "timeout": "1s"
        },
        "zipkin": {
          "collector_url": "http://192.168.99.100:9411/api/v2/spans",
          "service_name": "sonic"
        },
        "prometheus": {
          "port": 9091,
          "tag_host": true,
          "tag_path": true,
          "tag_method": true,
          "tag_statuscode": true
        },
        "jaeger": {
          "endpoint": "http://192.168.99.100:14268/api/traces",
          "service_name":"sonic"
        },
        "xray": {
          "version": "sonic-opencensus",
          "region": "eu-west-1",
          "access_key_id": "myaccesskey",
          "secret_access_key": "mysecretkey"
        },
        "logger": {
          "stats": true,
          "spans": true
        }
      }
    }
  }
}
